---
import type { Contributor } from '../../types'

interface Props {
    Contributors: Contributor[]
}
const contributors = Astro.props.Contributors
---

<section>
    <h2>Contributors</h2>
    <ol id="top-contributors">
        {contributors.map(
            (c: Contributor) => (
                <li>
                    <strong>
                        <a
                            href={`/map/${c.LoginName}`}
                        >
                            {c.LoginName}
                        </a>
                    </strong>
                    <span>
                        ({c.LinksSubmitted})
                    </span>
                </li>
            )
        )}
    </ol>
</section>

<style>
    h2 {
        margin-top: 0.5rem;
    }
    
    @media (min-width: 480px) {
        ol#top-contributors {
            flex-wrap: wrap;
            max-height: 35px;
        }   
    }
</style>