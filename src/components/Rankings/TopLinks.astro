---
import { LINKS_PAGE_LIMIT } from '../../constants'
import * as types from '../../types'
import Link from '../Link/Link'
import Pagination from '../Pagination.astro'

interface Props {
    Links: types.Link[]
    NSFW?: boolean
    Cats?: string
    Period?: types.Period
    SortBy?: types.SortMetric
    Token?: string
    User?: string
    Page?: number
    NextPage?: number
}
const { Links: links, NSFW: nsfw, Cats: cats, Period: period, SortBy: sort_by, Page: page, NextPage: next_page, Token: token, User: user } = Astro.props

const is_only_page = (page === 1 && next_page === -1) || next_page === undefined
---

<>    
    <ol id='top-links' start={page ? (page - 1) * LINKS_PAGE_LIMIT + 1 : ''}>
        {links?.map((link) => (
            <Link
                client:load
                Link={link}
                NSFWCatLinks={nsfw}
                Token={token}
                User={user}
            />
        ))}
    </ol>

    {is_only_page ? null : <Pagination
        Cats={cats}
        Period={period ?? 'month'}
        SortBy={sort_by}
        HasNSFW={nsfw}
        Page={page ?? 1}
        NextPage={next_page}
    />}
</>

<style>
    #top-links {
        max-width: calc(100% - 1rem);
        margin: 0;
        margin-top: 0.5rem;
        margin-left: auto;
        padding: 0;
    }
</style>